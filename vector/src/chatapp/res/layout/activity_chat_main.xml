<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    tools:ignore="RtlCompat,RtlHardcoded,VectorDrawableCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_chat_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <include layout="@layout/nav_header_chat_main" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/invite"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        >
                        <ImageView
                            android:id="@+id/iconView10"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:srcCompat="@drawable/add_to_contact"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iconView10"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="@string/invite_friends"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            tools:ignore="RtlCompat,RtlHardcoded" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/arrow_right"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            tools:ignore="VectorDrawableCompat" />


                    </RelativeLayout>

                    <View
                        android:id="@+id/dividerview10"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/invite"
                        android:background="@color/colorAccent" />

                    <RelativeLayout
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/dividerview10"
                        >
                        <ImageView
                            android:id="@+id/iconViewsettings10"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/settings_menu"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_20sdp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/textViewsettings10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iconViewsettings10"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:text="@string/title_settings"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/arrow_right"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            />


                    </RelativeLayout>

                    <View
