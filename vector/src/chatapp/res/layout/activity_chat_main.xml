                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/credit_view"
                        android:background="@color/colorAccent" />

                    <RelativeLayout
                        android:id="@+id/transfer_view"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
